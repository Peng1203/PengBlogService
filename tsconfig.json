{
  "compilerOptions": {
    "target": "es6", // 编译后的 JavaScript 代码版本
    "module": "commonjs", // 编译后的模块规范
    "outDir": "./dist", // 编译后的 JavaScript 代码输出目录
    "esModuleInterop": true, // 支持 CommonJS 模块的导入和导出语法
    "sourceMap": true, // 生成 source map
    "strict": true, // 开启所有严格类型检查选项
    "moduleResolution": "node", // 模块解析策略
    "resolveJsonModule": true, // 支持导入 JSON 模块
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ], // 指定需要编译的 TypeScript 文件
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ] // 排除不需要编译的文件或目录
}